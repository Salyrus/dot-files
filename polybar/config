primary = #ffb52a
secondary = #e60053
alert = #bd2c40

[bar/top]
width = 1900
height = 30

#background = #df1D1F21
background = #ee0c181d
foreground = #ccffffff

border-color = #00000000

offset-y = 10
offset-x = 10

padding-left = 0
